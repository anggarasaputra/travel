<?xml version="1.0"?>
<odoo>
<data>
    <!-- Halaman Seat -->
    <template id="tiketseat">
        <t t-call="website.layout">
            <t t-set="title">Travel</t>
            <div class="oe_structure">
                <div class="container">
                  <section class="search-banner text-white py-3 form-arka-plan" id="search-banner">
                            <div class="row">
                                <div class="col-md-12">
                                <form method="post" action="pay/">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <div class="form-inline center-block">
                                                <t t-foreach="seat_list" t-as="seat_item">
                                                    <div class="col-md-6">
                                                                <t t-if="seat_item['ada'] == false">
                                                                    <div class="card">
                                                                        <div class="card-body">
                                                                            <label class="form-check-label" for="inlineCheckbox3">
                                                                            <input type="checkbox" name="seats[]" t-att-value="seat_item['id']" class="form-check-input" style="width:15vw;height:15vh;">
                                                                            </input>
                                                                            <h5 style="background-color: white; color: black;"><t t-esc="seat_item['seat_number']"/></h5></label>
                                                                        </div>
                                                                    </div>
                                                                </t>

                                                                <t t-if="seat_item['ada'] == true">
                                                                     <div class="card" style="background-color:##7C7BAD;">
                                                                        <div class="card-body">
                                                                        <label class="form-check-label" for="inlineCheckbox3">
                                                                        <input type="checkbox" name="seats[]" t-att-value="seat_item['id']" disabled="disabled" class="form-check-input" style="width:15vw;height:15vh;">
                                                                        </input>
                                                                        <h5 style="background-color: white; color: black;"><t t-esc="seat_item['seat_number']"/> ( Sold )</h5></label>
                                                                        </div>
                                                                     </div>
                                                                </t>
                                                    </div>
                                                </t>
                                        </div>
                                    <div class="center-block text-center">
                                        <br/>
                                         <div class="form-group ">
                                            <button type="submit" class="btn btn-warning form-control">BOOKING SEAT</button>
                                         </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                  </section>

                </div>
            </div>
        </t>
    </template>
</data>
</odoo>